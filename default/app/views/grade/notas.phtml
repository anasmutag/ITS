                <input id="txt_notaalumno<?= $alumno->id_alumno?>" class="texto_gradealumno" type="number" data-idalumno="<?=$alumno->id_alumno?>" maxlength="3" step="0.1" min="0" max="5" value="0" onkeyup="validarNota.call(this);">
