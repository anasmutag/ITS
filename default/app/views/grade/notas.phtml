<div id="dv_dialogoconfirmacionregistronotas">
    <span>Registro de calificaciones extoso. Aceptar para continuar con el registro o salir del sistema de registro de calificaciones</span>
</div>

<script type="text/javascript">
    $('#dv_dialogoconfirmacionregistronotas').dialog({
        autoOpen: false,
        modal: true,
        resizable: false,
        closeOnEscape: false,
        buttons: {
            "Aceptar": function() {
                window.location = "<?= PUBLIC_PATH?>docentes/registro_notas/";
            }
        },
        close: function (){}
    });
    
    $('#btn_registrarnotasalumno').on('click', function (){
        var tiponota = $('#txt_cortessemestre').data('tiponota'),
            idmateria = <?= $idmateria?>,
            banderanotas = 1;
        
        <? foreach($alumnos as $alumno): ?>
            var nota = $('#txt_notaalumno' + <?= $alumno->id_alumno?>).val();
            
            if(nota.length === 0){
                banderanotas = 0;
            }
        <? endforeach; ?>
        
        if(tiponota > 0 && banderanotas > 0){
            var notas = new Array();
            
            <? foreach($alumnos as $alumno): ?>
                var nota = $('#txt_notaalumno' + <?= $alumno->id_alumno?>).val(),
                    idalumno = $('#txt_notaalumno' + <?= $alumno->id_alumno?>).data('idalumno');

                notas.push({
                    valor: puntoporcoma(nota),
                    idalumno: idalumno
                });
            <? endforeach; ?>
            
            $.ajax({
                type: 'POST',
                url: <?= PUBLIC_PATH?> + 'grade/registrarNotasAlumnos/',
                data: {
                    tiponota: tiponota,
                    idmateria: idmateria,
                    notas: JSON.stringify(notas)
                },
                dataType: 'json',
                beforeSend: function(){
                    //document.getElementById("btn_consultarnotas").disabled = true;

                    $('body').addClass('menuopen');

                    $.blockUI({
                        message: "Registrando calificaciones..."
                    });
                },
                success: function(data) {
                    $('body').removeClass('menuopen');
                    //document.getElementById("frm_codigoestudiante").reset();

                    if(data !== null && data.res === 'ok'){
                        $('#dv_dialogoconfirmacionregistronotas').dialog('open');
                        
                        console.log(data.res);
                    }else{
                        console.log(data.msg);
                    }
                },
                error: function(){
                    //console.log('Ocurrio un error inesperado. Intenta nuevamente');
                }
            }).always(function(){
                //*document.getElementById("btn_consultarnotas").disabled = false;

                $.unblockUI();
            });
        }else{
            $inputfocus = null;
            /*$input = $('#slt_cortessemestre');
            if(convertiranumero(tiponota) === 0){
                $input.addClass('etiqueta_tiponotanovalido');
                if($inputfocus === null)$inputfocus = $input;
            }else{
                $input.removeClass('etiqueta_tiponotanovalido');
            }*/
            <? foreach($alumnos as $alumno): ?>
                var nota = $('#txt_notaalumno' + <?= $alumno->id_alumno?>).val();
                
                $input = $('#txt_notaalumno' + <?= $alumno->id_alumno?>);
                if(nota.length === 0){
                    $input.addClass('etiqueta_tiponotanovalido');
                    if($inputfocus === null)$inputfocus = $input;
                }else{
                    $input.removeClass('etiqueta_tiponotanovalido');
                }
            <? endforeach; ?>

            if($inputfocus !== null){
                $('html, body').animate({scrollTop: $inputfocus.position().top+'px'}, 1000);
                $inputfocus.focus();
            }
        }
    });
    
    function validarNota(){
        if($(this).val().length > 0){
            $(this).removeClass('etiqueta_tiponotanovalido');
        }else{
            $(this).addClass('etiqueta_tiponotanovalido');
        }
    }
</script>